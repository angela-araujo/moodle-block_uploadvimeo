{{!
    @template block_uploadvimeo/account

    Moodle rendering template for block records

    This template renders a Bootstrap table.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "tableheaders": ["heading 1", "heading 2"],
        "tabledata": [["item1row 1", "item2row 1"],
                      ["item1row 2", "item2row 2"]]
    }
    
}}

<div id="block-uploadvimeo-{{uniqid}}" class="block-uploadvimeo block-cards" data-region="uploadvimeo" role="navigation" style="text-align: center;">

	<div class="table-responsive">
	<table class="table table-striped">
		{{! Using a get_string helper }}
		<caption>
			{{# str }} pluginname, block_uploadvimeo {{/ str }}
		</caption>
		<thead> 
			{{#tableheaders}}
				<th>{{.}}</th>
			{{/tableheaders}}
		</thead>
		<tbody>
			{{! Iterate through the array of data rows }}
			{{#tabledata}}
				<tr>
					{{#.}}
						<td style="max-width: 60px;">{{.}}</td>
					{{/.}}
				</tr>
			{{/tabledata}}
		</tbody>
	</table>
	</div>
</div>
		